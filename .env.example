# ============================================
# Pi-Gigs Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://pi_gigs_user:your_password_here@localhost:5432/pi_gigs?schema=public"

# Direct connection URL for migrations (optional, defaults to DATABASE_URL)
DIRECT_URL="postgresql://pi_gigs_user:your_password_here@localhost:5432/pi_gigs?schema=public"

# ============================================
# Supabase Configuration (File Storage)
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key-here"

# ============================================
# Pi Network Configuration
# ============================================
PI_API_URL="https://api.minepi.com/v2"
PI_API_KEY="your-pi-api-key-here"
PI_API_SECRET="your-pi-api-secret-here"
NEXT_PUBLIC_PI_SANDBOX="false"

# ============================================
# Next.js Configuration
# ============================================
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# ============================================
# NextAuth Configuration (if using NextAuth)
# ============================================
NEXTAUTH_SECRET="generate-random-secret-here"
NEXTAUTH_URL="https://yourdomain.com"
